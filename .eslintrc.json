{
    "env": {
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            4,
            {
                "MemberExpression": "off"
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-empty": [
            "error",
            {
                "allowEmptyCatch": true
            }
        ],
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true
            }
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "globals": {
        "ARGV": false,
        "Debugger": false,
        "GIRepositoryGType": false,
        "imports": false,
        "Intl": false,
        "log": false,
        "logError": false,
        "print": false,
        "printerr": false,
        "window": false
    },
    "parserOptions": {
        "ecmaVersion": 2017
    }
}